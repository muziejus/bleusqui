{
  "name": "bleusquite",
  "version": "0.0.1",
  "description": "A Node library (further) simplifying the process of posting to Bluesky automatically.",
  "author": "Moacir P. de SÃ¡ Pereira <github@moacir.moacir.com> (http://moacir.com)",
  "license": "MIT",
  "private": true,
  "type": "module",
  "repository": "git@github.com:muziejus/bleusquite.git",
  "scripts": {
    "dev": "rollup -c ./rollup.config.mjs --watch --watch.onEnd='mocha'",
    "build": "rollup -c ./rollup.config.mjs",
    "devOld": "concurrently \"npm:dev:*\" \"npm:test:*\" --prefix-colors cyan,white,yellow --restart-tries -1",
    "lint:types": "tsc --noEmit",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js": "eslint --color --format=pretty . --cache",
    "lint:js:fix": "eslint --color --format=pretty . --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepublishOnly": "pnpm run build",
    "prepack": "pnpm run build",
    "test": "mocha"
  },
  "keywords": [
    "Node",
    "Bluesky",
    "E-literature",
    "elit"
  ],
  "dependencies": {
    "@atproto/api": "^0.6.3",
    "file-type": "^18.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.1",
    "rollup": "^3.28.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">= 18.*",
    "yarn": "use pnpm",
    "npm": "use pnpm"
  },
  "volta": {
    "node": "18.17.1",
    "pnpm": "8.6.12"
  },
  "packageManager": "pnpm@8.6.12"
}
